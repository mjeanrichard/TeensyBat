<UserControl x:Class="TeensyBatExplorer.WPF.Views.NodeDetail.NodeDetailPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TeensyBatExplorer.WPF.Views.NodeDetail"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type=local:NodeDetailViewModel, IsDesignTimeCreatable=False}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                <TextBox Text="{Binding Node.NodeNumber, Mode=OneWay}"
                         md:HintAssist.Hint="Geräte Nummer"
                         IsReadOnly="True"
                         Margin="0 10 20 10"
                         HorizontalContentAlignment="Right"
                         VerticalContentAlignment="Top"
                         md:TextFieldAssist.DecorationVisibility="Hidden"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" />
                <TextBox Text="{Binding Node.Logs.Count, Mode=OneWay}"
                         md:HintAssist.Hint="Anzahl Log Files"
                         IsReadOnly="True"
                         Margin="0 10 20 10"
                         HorizontalContentAlignment="Right"
                         md:TextFieldAssist.DecorationVisibility="Hidden"
                         Style="{StaticResource MaterialDesignFloatingHintTextBox}" />

            </StackPanel>
    </Grid>
</UserControl>
