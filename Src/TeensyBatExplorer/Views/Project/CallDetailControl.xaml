<UserControl
    x:Class="TeensyBatExplorer.Views.Project.CallDetailControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:oxy="using:OxyPlot.Windows"
    xmlns:controls="using:TeensyBatExplorer.Controls"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <ScrollViewer Name="ForegroundElement" VerticalScrollMode="Enabled" HorizontalAlignment="Stretch" Padding="12,0">
        <StackPanel HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,8,0,0">
                <TextBlock
                    Margin="12,0,0,0"
                    Text="{x:Bind CallModel.Count, Mode=OneWay}"
                    Style="{StaticResource SubheaderTextBlockStyle}" />


            </StackPanel>
            <Grid>
                <!--<oxy:PlotView Model="{x:Bind CallModel.PlotModel, Mode=OneWay}" Height="400" Width="400">
                </oxy:PlotView>-->
                <controls:CallDataGraphControl CallData="{x:Bind CallModel.Data, Mode=OneWay}" />
            </Grid>
        </StackPanel>
    </ScrollViewer>
</UserControl>