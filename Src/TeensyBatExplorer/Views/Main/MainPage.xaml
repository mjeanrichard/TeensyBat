<main:MainPageBase
    x:Class="TeensyBatExplorer.Views.Main.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="using:TeensyBatExplorer.Views"
    xmlns:main="using:TeensyBatExplorer.Views.Main"
    Style="{StaticResource PageStyle}"
    mc:Ignorable="d">

    <Grid
        x:Name="ContentArea"
        Margin="{StaticResource MediumLeftRightMargin}">
        <Grid
            Background="{ThemeResource SystemControlPageBackgroundChromeLowBrush}">
            
        </Grid>
    </Grid>

    <Page.BottomAppBar>
        <CommandBar IsOpen="True" IsSticky="True">
            <AppBarButton Label="New Project" Icon="Add" Command="{x:Bind ViewModel.CreateNewProjectCommand}" />
        </CommandBar>
    </Page.BottomAppBar>
</main:MainPageBase>